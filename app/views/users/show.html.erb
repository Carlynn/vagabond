<div id="bg" class="container-fluid" style="background-image: url('<%= @user.image %>');">
  <!-- BEGIN Profile image and description -->
  <!-- BEGIN Profile IMAGE -->
  <div class="row prof-image">
      <%= image_tag(@user.image, class: "circle") %>
  </div>
  <!-- END Profile IMAGE -->
  <!-- BEG COTNAINER FOR CONTENT -->
    <div class="container">
    <div class="row">
      <div class="col s12 wht-cont z-depth-5">
          <!-- BEGIN PROFILE INFO -->
          <div class="prof-description">
            <h4><%= @user.first_name.upcase %> <%= @user.last_name.upcase %></h4>
            <p><b>location: </b><%= @user.city %><br>
            <b>Date Joined: </b><%= @user.created_at %></p>
          </div>
          <!-- END PROFILE INFO -->
          <!-- BEGIN profile buttons -->
          <% if session[:user_id].nil? || session[:user_id] != @user.id %>
          <% else %>
            <%= link_to "Edit Profile", edit_user_path(@user.slug), class: "btn" %>
          <% end %>
          <div class="post-content">
            <h3 class="post-title title">POSTS</h3>
          </div>
          <hr>
          <!-- END profile buttons -->
          <!-- BEGIN POST DATA -->
              <% @posts.each do |post| %>
                <div class="row">
                  <!-- BEGIN IMAGE FOR POST -->
                  <br>
                  <div class="col s12 m3">
                    <%= image_tag(post.image, class: "post-image z-depth-4") %><br>
                    <% if session[:user_id].nil? || session[:user_id] != @user.id %>
                    <% else %>
                      <%= link_to "Edit Post", edit_post_path(post.id), class: "btn btn-posts" %>
                  </div>
                  <!-- END IMAGE FOR POST -->
                  <!-- BEGIN POST CONTENT -->
                  <div class="col s12 m9">
                    <b>Title: </b><%= post.title %> <br>
                    <b>Address: </b><%= post.location.address %> <br>
                    <b>City: </b><%= link_to "#{post.location.city}", location_path(post.location.id) %> <br>
                    <b>Posted at: </b><%= post.created_at %> <br>
                    <b>Experience: </b><%= post.description %> <br>
                  </div>
                  <!-- END POST CONTENT -->
                </div>
                <hr>
                <% end %>
              <% end %>
          <!-- END POST DATA -->
      </div>
    </div>
