<div class="container">
<div class="row" style="margin-top: 0.75rem">
  <div class="push-s2">
    <h3 style="display: inline">Hello </h3><h3 class="post-title-color" style="display: inline"><%= @user.first_name %></h3>
    <p>Update Password</p>
    <%= form_for @user, :url => url_for(:controller => 'users', :action => 'password_update'), method: "patch" do |f| %>
    <div>
      <%= f.label :password%>
      <%= f.password_field :password %>
    </div>
    <%= f.submit "Change Password", class: "btn" %>
    <% end %>
   </div>
 </div>
 </div>
