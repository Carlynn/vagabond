<div class="row">
  <div class="col s8 push-s2">
    <h1>Hi <%= @user.first_name %>!</h1>
    <h4>We want to make sure your information is relevant! Update it here!</h4>
    <%= form_for @user do |f| %>
    <div>
      <%= f.label :first_name%>
      <%= f.text_field :first_name %>
    </div>
    <div>
      <%= f.label :last_name%>
      <%= f.text_field :last_name %>
    </div>
    <div>
      <%= f.label :city%>
      <%= f.text_field :city %>
    </div>
    <div>
      <%= f.label :state%>
      <%= f.text_field :state %>
    </div>
    <div>
      <%= f.label :country%>
      <%= f.text_field :country %>
    </div>
    <div>
      <%= f.label :image%>
      <%= f.url_field :image %>
    </div>
    <div>
      <%= f.label :email%>
      <%= f.email_field :email %>
    </div>
    <%= f.submit "Save Changes", class: "btn" %>
    <% end %>
   </div>
 </div>
