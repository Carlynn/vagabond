<img class="responsive-img" style="margin-bottom: 20px" src="assets/barcelona_01.jpg">



<%= @location.city %>

<% if session[:user_id].nil?  %>
<% else %>
  <%= link_to "Add Post", new_post_path({:location_id => @location.city})%>
<% end %>

<% @locationposts.each do |post| %>
  <ul>
    <%= post.title %>
    <%= post.description%>
    <%= post.user.first_name%>
    <% if session[:user_id].nil? || session[:user_id] != post.user.id %>
    <%= link_to "Show Post", post_path(post.id) %>
    <% else %>
      <%= link_to "Show Post", post_path(post.id) %>
      <%= link_to "Edit Post", edit_post_path(post.id) %>
      <%= button_to 'Delete', {:controller => "posts", :action => 'show', :id => post.id}, data: {:confirm => "Are you sure you want to delete the #{post.title} post?"}, :method => :delete, class: 'btn delete-button' %>
    <% end %>
  </ul>
<% end %>
